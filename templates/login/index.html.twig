{% block body %}
    <form action="{{ path('app_login') }}" method="POST">
        <div class="mb-3">
            <label for="username" class="form-label">
                {{ 'email'|trans({}, null, app.session.get('_locale', 'en')) }}
            </label>
            <input type="text"
                   id="username"
                   name="_username"
                   value="{{ lastUsername }}"
                   class="form-control" />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">
                {{ 'password'|trans({}, null, app.session.get('_locale', 'en')) }}
            </label>
            <input type="password"
                   id="password"
                   name="_password"
                   class="form-control" />
        </div>

        <div class="mb-3">
            <label for="remember_me">
                {{ 'remember_me'|trans({}, null, app.session.get('_locale', 'en')) }}
            </label>
            <input id="remember_me" type="checkbox" name="_remember_me" checked />
        </div>

        <input type="hidden" name="_target_path" value="/" />

        <div>
            <button type="submit" class="btn btn-primary w-100 mt-2 mb-2">
                {{ 'login'|trans({}, null, app.session.get('_locale', 'en')) }}
            </button>
        </div>
    </form>

    <div class="mt-2 text-center">
        {{ 'dont_have_account'|trans({}, null, app.session.get('_locale', 'en')) }}
        <a href="{{ path('app_register') }}" class="text-decoration-none">
            {{ 'register_here'|trans({}, null, app.session.get('_locale', 'en')) }}
        </a>
    </div>
{% endblock %}
