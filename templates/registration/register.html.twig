{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block bread %}
    â†’ Register
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(registrationForm, {'attre': {'novalidate': 'novalidate'}}) }}
    <div class="h5 mb-3">
        Basic Information
    </div>
    <div class="text-secondary mb-4 pb-2 border-bottom">
        Enter your credentials
    </div>

    <div>
        {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control mb-2'}})}}
        {{ form_errors(registrationForm.username) }}
    </div>

    <div>
        {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control mb-2'}})}}
        {{ form_errors(registrationForm.email) }}
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            {{ form_label(registrationForm.plainPassword.first, 'Password', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control mb-2'}})}}
            {{ form_errors(registrationForm.plainPassword.first) }}
        </div>
        <div class="col-md-6">
            {{ form_label(registrationForm.plainPassword.second, 'Repeated Password', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control mb-2'}})}}
            {{ form_errors(registrationForm.plainPassword.second) }}
        </div>
    </div>

    <div class="d-flex align-items-center mt-3 mb-3">
        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input me-2'}}) }}
        {{ form_label(registrationForm.agreeTerms, 'Agree to terms', {'label_attr': {'class': 'form-label'}}) }}
    </div>

    <div class="h5 mt-4 mb-3">
        Your Profile
    </div>
    <div class="text-secondary mb-4 pb-2 border-bottom">
        Enter more (optional) details about yourself. You can do it later.
    </div>

    {{ include ('/settings_profile/_profile_form.html.twig', { form: registrationForm.userProfile, readonly: false }) }}

    <div>
        <button type="submit" class="btn btn-primary w-100 mt-3 mb-2">Register</button>
    </div>
    {{ form_end(registrationForm) }}

    <div class="mt-2 text-center text-secondary">
        Already have an account? <a href="{{ path('app_login') }}" class="link-primary">Login here</a>
    </div>
{% endblock %}
