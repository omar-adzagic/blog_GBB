        <div class="card-body rounded bg-light border">
            <p class="card-text">
                <strong>{{ 'tag.name'|trans_session|capitalize }}:</strong> {{ tag.name|crop_text(40) }}
            </p>
        </div>
    </div>
{% endblock %}
