{% extends 'admin/admin_base.html.twig' %}

{% block title %}Editing a Post{% endblock %}

{% block bread %}
    → <a href="{{ path('admin_tag_index') }}">Admin Tags</a> → Show
{% endblock %}

{% block body %}
    <div class="card" style="width: 33%; margin-left: auto; margin-right: auto; margin-top: 10%">
        <h4 class="card-title my-3 mx-auto">User Details</h4>
        <div class="card-body rounded bg-light border">
            <p class="card-text">
                <strong>Username:</strong> {{ user.username }}
            </p>
            <p class="card-text">
                <strong>Email:</strong> {{ user.email }}
            </p>
            <p class="card-text">
                <strong>Roles:</strong> {{ user.roles|join(', ') }}
            </p>
        </div>
    </div>
{% endblock %}
