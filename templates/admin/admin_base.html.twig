<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - {% block title %}{% endblock %}</title>
    <!-- Bootstrap CSS or other stylesheets -->
    {% block stylesheets %}
        {#        {{ encore_entry_link_tags('app') }}#}
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    {% endblock %}

    {% block javascripts %}
        {#        {{ encore_entry_script_tags('app') }}#}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    {% endblock %}
</head>
<body>
<div class="" style="margin: auto; width: 80%">
    <header>
        <!-- Admin navigation bar or header content -->
        <nav class="navbar navbar-expand-lg mt-2 navbar-light bg-light rounded" style="border: 1px solid #89c2d9">
            <div class="container-fluid">
                <a class="navbar-brand text-primary" href="{{ path('app_post') }}">
                    <i class="bi bi-house"></i>
                </a>
                <a class="navbar-brand text-primary" href="{{ path('admin_panel_index') }}">
                    <i class="bi bi-speedometer"></i>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'admin_post_index' ? 'active' : '' }}"
                           aria-current="page"
                           href="{{ path('admin_post_index') }}">Posts</a>
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'admin_tag_index' ? 'active' : '' }}"
                           href="{{ path('admin_tag_index') }}">Tags</a>
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'admin_user_index' ? 'active' : '' }}"
                           href="{{ path('admin_user_index') }}">Users</a>
                    </div>
                    <div class="ml-2 text-primary">
                        <a href="{{ path('app_logout') }}" class="text-decoration-none">
                            Logout
                            <i class="bi bi-box-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div>
        {% block bread %}
        {% endblock %}
    </div>

    <main>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success my-2" role="alert">{{ message }}</div>
        {% endfor %}

        <header class="mt-3 mb-4">
            <h2>{% block header_text %}{% endblock %}</h2>
        </header>
        {% block body %}{% endblock %}
    </main>

    <footer>
        <!-- Footer content -->
    </footer>
</div>

<!-- Bootstrap JS, jQuery, or other scripts -->
{% block body_javascripts %}{% endblock %}
</body>
</html>
