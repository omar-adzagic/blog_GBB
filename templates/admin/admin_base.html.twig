<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ 'admin_panel'|trans_session|title }} - {% block title %}{% endblock %}</title>
    <!-- Bootstrap CSS or other stylesheets -->
    {% block stylesheets %}
        {#        {{ encore_entry_link_tags('app') }}#}
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet" />
    {% endblock %}

    {% block javascripts %}
        {#        {{ encore_entry_script_tags('app') }}#}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    {% endblock %}
</head>
<body>
<div style="margin: auto; width: 80%">
    <header>
        <!-- Admin navigation bar or header content -->
        <nav class="navbar navbar-expand-lg mt-3 px-3 navbar-light bg-light rounded" style="border: 1px solid #89c2d9">
            <div class="container-fluid">
                <a class="navbar-brand text-primary" href="{{ path('app_post') }}">
                    <i class="bi bi-house"></i>
                </a>
                <a class="navbar-brand text-primary" href="{{ path('admin_panel_index') }}">
                    <i class="bi bi-speedometer"></i>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
                        aria-expanded="false" aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="mr-3 collapse navbar-collapse d-flex justify-content-between" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'admin_post_index' ? 'active' : '' }}"
                           aria-current="page"
                           href="{{ path('admin_post_index') }}"
                        >
                            {{ 'the_posts'|trans_session|title }}
                        </a>
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'admin_tag_index' ? 'active' : '' }}"
                           href="{{ path('admin_tag_index') }}"
                        >
                            {{ 'the_tags'|trans_session|title }}
                        </a>
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'admin_user_index' ? 'active' : '' }}"
                           href="{{ path('admin_user_index') }}"
                        >
                            {{ 'the_users'|trans_session|title }}
                        </a>
                    </div>
                    <div class="ml-2 text-primary">
                        <a href="{{ path('app_logout') }}" class="text-decoration-none">
                            {{ 'auth.logout'|trans_session|title }}
                            <i class="bi bi-box-arrow-right"></i>
                        </a>
                    </div>
                </div>
                {{ include('translations/_language_picker.html.twig') }}
            </div>
        </nav>
    </header>

    <div class="my-4">
        <h3>
            {% block bread %}{% endblock %}
        </h3>
    </div>

    <main>
        {% set succssMessages = app.flashes('success') %}
        {% if succssMessages|length > 0 %}
            <div class="alert alert-success my-2 py-2 border border-success flash-message" role="alert">
                {% for message in succssMessages %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endif %}
        {% set errorMessages = app.flashes('error') %}
        {% if errorMessages|length > 0 %}
            <div class="alert alert-danger my-2 py-2 border border-danger flash-message" role="alert">
                {% for message in errorMessages %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endif %}

        <header class="mt-3 mb-4">
            <h2>{% block header_text %}{% endblock %}</h2>
        </header>
        {% block body %}{% endblock %}
    </main>

    <footer>
        <!-- Footer content -->
    </footer>
</div>

<!-- Bootstrap JS, jQuery, or other scripts -->
<script src="{{ asset('js/flash-messages-management.js') }}" defer></script>
{% block body_javascripts %}{% endblock %}
</body>
</html>
