{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div>{{ form_errors(form) }}</div>
<div class="p-4 bg-light rounded" style="border: 1px dashed #89c2d9">
    <div class="col-5 px-0 mb-3">
        {% set labelTranslation = 'enter_the_title'|trans_session %}
        {{ form_label(
            form.title,
            labelTranslation,
            {'label_attr': {'class': 'form-label'}}
        ) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control shadow-sm'}}) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="col-12 px-0 mb-3">
        {% set labelTranslation = 'enter_the_text'|trans_session %}
        {{ form_label(
            form.content,
            labelTranslation,
            {'label_attr': {'class': 'form-label'}}
        ) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control shadow-sm'}}) }}
        {{ form_errors(form.content) }}
    </div>

    <div class="col-6 mb-3">
        {% set labelTranslation = 'publish?'|trans_session %}
        {{ form_label(
            form.is_published,
            labelTranslation,
            {'label_attr': {'class': 'form-label'}}
        ) }}
        {{ form_widget(form.is_published) }}
        {{ form_errors(form.is_published) }}
    </div>

    {{ form_row(form.postTags, {'attr': {'style': 'display: none;'}}) }}

    <div class="col-5 px-0">
        <div id="tags-container" class="mb-3" data-post-tags-json="{{ postTagsJson ?? '[]' }}"></div>
        <div>
            <input type="text" id="tag-input" class="form-control" placeholder="{{ 'add_tag'|trans_session }}" />
        </div>
        <div id="tag-suggestions" class="list-group"></div>
        <input type="hidden" id="tag-ids" name="postTags" value="">
    </div>
</div>

<button type="submit" class="col-6 btn btn-primary w-100 mt-4 mb-2">
    {{ 'save'|trans_session }}
</button>
{{ form_end(form) }}