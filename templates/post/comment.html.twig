{% extends 'base.html.twig' %}

{% block title %}Post - Add Comment{% endblock %}

{% block bread %}
    → <a href="{{ path('app_post_show', {slug: post.slug}) }}">Post</a> → Comment
{% endblock %}

{% block body %}

    {{ include('post/_post.html.twig', {post: post}) }}

    {{ form_start(form) }}
    <div>{{ form_errors(form)}}</div>

    <div class="mb-3">
        {{ form_label(form.content, 'Please enter the comment', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control shadow-sm'}}) }}
        {{ form_errors(form.content) }}
    </div>

    <div>
        <button type="submit" class="btn btn-primary w-100 mt-3 mb-2">Add comment!</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
