{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div>{{ form_errors(form) }}</div>

<div class="mb-3">
    {{ form_label(form.title, 'Please enter the title', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.title, {'attr': {'class': 'form-control shadow-sm'}}) }}
    {{ form_errors(form.title) }}
</div>

<div class="mb-3">
    {{ form_label(form.content, 'Please enter the post text', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.content, {'attr': {'class': 'form-control shadow-sm'}}) }}
    {{ form_errors(form.content) }}
</div>

<div class="mb-3">
    {{ form_label(form.is_published, 'Publish?', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.is_published) }}
    {{ form_errors(form.is_published) }}
</div>

<div class="row mb-2 d-flex flex-column">
    <div class="mb-2">Post Image</div>
    <div class="mr-2">
        {% if post.image %}
            <img src="{{ asset(images_public_path ~ 'post_images/' ~ post.image) }}"
                 style="width: 128px;"
                 class="d-inline-block rounded-circle border border-2 border-white"
                 alt="Post image"
            />
        {% endif %}
    </div>

    <div class="col-md-6 mt-3 d-flex flex-column">
        <label for="{{ form.image.vars.id }}" class="btn btn-secondary">
            Change
            {{ form_widget(form.image, {'attr': {'class': 'visually-hidden'}}) }}
        </label>
        {{ form_errors(form.image) }}
    </div>
</div>

<div>
    <button type="submit" class="btn btn-primary w-100 mt-4 mb-2">Save!</button>
</div>
{{ form_end(form) }}
