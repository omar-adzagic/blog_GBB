<div class="mb-4">
    <div class="h2">
        <a href="{{ path('app_post_show', { slug: post.slug }) }}" class="text-decoration-none">
            {{ post.title }}
        </a>
    </div>
    <div class="lead text-justify my-2">
        {{ post.content }}
    </div>
    <div class="px-3 py-2 border rounded">
        <div class="my-2">
            <div class="small text-secondary">
                Author: <a href="{{ path('app_profile', { id: post.user.id }) }}" class="text-decoration-none">{{ post.user.email }}</a>
            </div>
            <div class="small text-secondary">
                Written: {{ post.createdAt | date("M j, Y") }}
            </div>
        </div>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            {# The user is authenticated #}
            <div class="mt-2 mb-1 d-flex">
                {% set isLikedByCurrentUser = false %}
                {% for userLike in post.likedByUsers %}
                    {% if userLike.user == app.user %}
                        {% set isLikedByCurrentUser = true %}
                    {% endif %}
                {% endfor %}

                {% if isLikedByCurrentUser %}
                    <form action="{{ path('app_unlike', { id: post.id }) }}" method="post" class="d-flex align-items-center">
{#                        <a href="{{ path('app_unlike', { id: post.id }) }}" class="text-decoration-none d-flex align-items-center">#}
{#                            Unlike <span class="px-2 rounded bg-light">{{ post.likedByUsers.count }}</span>#}
{#                        </a>#}
                        <button type="submit" class="btn btn-link text-decoration-none px-0">
                            Unlike <span class="px-2 rounded bg-light">{{ post.likedByUsers.count }}</span>
                            <i class="bi bi-heart-fill text-danger"></i>
                        </button>
                    </form>
                {% else %}
                    <form action="{{ path('app_like', { id: post.id }) }}" method="post" class="d-flex align-items-center">
{#                        <a href="{{ path('app_like', { id: post.id }) }}" class="text-decoration-none d-flex align-items-center">#}
{#                            Like <span class="px-2 rounded bg-light">{{ post.likedByUsers.count }}</span>#}
{#                        </a>#}
                        <button type="submit" class="btn btn-link text-decoration-none px-0">
                            Like <span class="px-2 rounded bg-light">{{ post.likedByUsers.count }}</span>
                            <i class="bi bi-heart text-danger"></i>
                        </button>
                    </form>
                {% endif %}
            </div>
            <div class="mt-1 mb-2 d-flex">
                {% set isFavoredByCurrentUser = false %}
                {% for userFavorite in post.favoredByUsers %}
                    {% if userFavorite.user == app.user %}
                        {% set isFavoredByCurrentUser = true %}
                    {% endif %}
                {% endfor %}

                {% if isFavoredByCurrentUser %}
                    <a href="{{ path('app_remove_favorite', { id: post.id }) }}" class="text-decoration-none d-flex align-items-center">
                        Remove from Favorites
                    </a>
                    <span class="ml-2">
                    <i class="bi bi-star-fill text-warning lead"></i>
                </span>
                {% else %}
                    <a href="{{ path('app_favorite', { id: post.id }) }}" class="text-decoration-none d-flex align-items-center">
                        Add to Favorites
                    </a>
                    <span class="ml-2">
                    <i class="bi bi-star text-warning lead"></i>
                </span>
                {% endif %}
            </div>
            <div class="my-2 d-flex">
                <div>
                    <a href="{{ path('app_post_edit', { post: post.id }) }}" class="mr-1 text-decoration-none">Edit</a>
                    <i class="bi bi-pencil-square text-info"></i>
                </div>
                <div class="ml-2">
                    <a href="{{ path('app_post_comment', { post: post.id }) }}" class="text-decoration-none">
                        Comment <span class="px-1 rounded bg-light">{{ post.comments.count }}</span>
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</div>
