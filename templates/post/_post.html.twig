<div class="mb-4">
    <div class="h2">
        <a href="{{ path('app_post_show', { post: post.id }) }}" class="text-decoration-none">
            {{ post.title }}
        </a>
    </div>
    <div class="h4">
        {{ post.content }}
    </div>
    <div class="text-secondary">
        {{ post.createdAt | date("M j, Y") }}
    </div>
    <div>
        {% if post.likedByUsers.contains(app.user) %}
            <a href="{{ path('app_unlike', { id: post.id }) }}" class="text-decoration-none">
                Unlike <span class="px-2 rounded bg-light">{{ post.likedBy.count }}</span>
            </a>
        {% else %}
            <a href="{{ path('app_like', { id: post.id }) }}" class="text-decoration-none">
                Like <span class="px-2 rounded bg-light">{{ post.likedByUsers.count }}</span>
            </a>
        {% endif %}
    </div>
    <div class="small text-secondary">
        <a href="{{ path('app_profile', { id: post.user.id }) }}" class="text-decoration-none">{{ post.user.email }}</a>
    </div>
    <div class="d-flex">
        <a href="{{ path('app_post_edit', { post: post.id }) }}" class="mr-2 text-decoration-none">Edit</a>
        <a href="{{ path('app_post_comment', { post: post.id }) }}" class="text-decoration-none">Comment <span class="px-2 rounded bg-light">{{ post.comments.count }}</span></a>
    </div>
</div>
